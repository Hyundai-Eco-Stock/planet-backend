<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.phoenix.planet.mapper.DepartmentStoreProductMapper">

    <select id="existsByProductIdAndDepartmentStoreId" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM department_store_product
        WHERE product_id = #{productId}
        AND department_store_id = #{departmentStoreId}
    </select>

</mapper>